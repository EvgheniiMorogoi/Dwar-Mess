@using FlowerShop.Data.Models;
@model Product
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.Image" alt="..." /></div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Name</h1>
                <div class="fs-3 mb-5">
                    <span>de la @Model.PricePerUnit lei</span>
                </div>
                <p class="lead fs-5">@Model.Description</p>
                <div class="d-flex">
                    <a class="btn btn-primary flex-shrink-0" href="@Url.Action("PlaceOrder","Orders")">
                        <i class="icon-cart me-1"></i>
                        Order
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>